{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "typings/main",
    "typings/main.d.ts"
  ],
  "typeRoots": [
      "node_modules/@types"
  ],
  "types": [
    "core-js",
    "node",
    "hammerjs"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
